<aura:component access="global" implements="flexipage:availableForAllPageTypes">
    <aura:attribute access="global" name="greeting" type="String" default="Hello" />
    <aura:attribute access="global" name="toWhom" type="String" default="world" />
    <div class="box container">
       	<span class="greeting">{!v.greeting}</span>,
           {!v.toWhom}!
    </div>
</aura:component>